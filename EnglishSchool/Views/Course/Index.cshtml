@using EnglishSchool.Data.Entities;
@model IQueryable<EnglishSchool.Data.Entities.Course>
@{
    ViewData["Title"] = "EnglishSchool";
}
<div id="top">
    <div id="course">
        @foreach (Course entity in Model)
        {
            <div class="post-wrap">
                <div class="post-item">
                    <div class="post-item-wrap">
                        <a href="" class="post-link">
                            <h3 class="post-title">@entity.Title</h3>
                            <p class="post-content">@entity.Description</p>
                        </a>
                    </div>
                </div>
            </div>
        }
     </div>
</div>
